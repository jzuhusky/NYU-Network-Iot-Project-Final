<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/DialogMain"
        >

  <TextView android:id="@+id/disable_maps_description"
            android:text="@string/disable_maps_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3sp"
            android:textSize="16sp"
            style="@style/DialogText"
            />

    <CheckBox android:id="@+id/disable_maps_checkbox"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/disable_maps_description"
              android:layout_marginLeft="1sp"
              android:gravity="center_vertical"
        />

    <Button
            android:text="@string/ok"
            android:id="@+id/disable_maps_ok"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/disable_maps_checkbox"
            android:layout_below="@+id/disable_maps_description"
            android:gravity="center_vertical"
            />

</RelativeLayout>